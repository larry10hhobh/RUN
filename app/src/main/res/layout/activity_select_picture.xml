<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_while">
    <RelativeLayout
        android:id="@+id/head_select"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorTheme">

        <ImageView
            android:id="@+id/img_select_picture_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/text_albumName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_select_picture_back"
            android:gravity="center"
            android:text="@string/title_register"
            android:textColor="@color/theme_while"
            android:textSize="20sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="@string/btn_finish"
            android:textSize="16sp"
            android:textColor="@color/theme_while"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <GridView
        android:id="@+id/select_picture_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head_select"
        android:numColumns="3"
        android:layout_margin="5dp"></GridView>

    <RelativeLayout
        android:id="@+id/relative_select_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"></RelativeLayout>

</RelativeLayout>
