<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_while">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAOBang"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/colorTheme"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_login_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:padding="5dp">
        <EditText
            android:id="@+id/edt_login_username"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="@string/hint_username"
            android:textColorHint="@color/hint_edt_text"
            android:background="@drawable/edit_gray_selector"
            android:padding="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_black"
            />
        <EditText
            android:id="@+id/edt_login_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textColorHint="@color/hint_edt_text"
            android:background="@drawable/edit_gray_selector"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_rigister"
                android:textColor="@color/primaryBlue"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/text_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_get_pwd_back"
                android:textColor="@color/primaryBlue"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:textSize="16sp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_login"
            android:layout_marginTop="15dp"
            android:textColor="@color/theme_while"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/btn_login_selector"
            />
    </LinearLayout>


</RelativeLayout>
