<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/image_fragment_me_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/default_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/me_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_fragment_me_avatar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/theme_while"
        android:textSize="24sp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/me_username_text"
        android:layout_marginTop="8dp">
        <RelativeLayout
            android:id="@+id/me_follow_relative"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/me_follow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_me_follow"
                android:textSize="16sp"
                android:textColor="@color/theme_while"
                />
            <TextView
                android:id="@+id/me_follow_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="0"
                android:textColor="@color/theme_while"
                android:layout_toRightOf="@id/me_follow_text"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/theme_while"
            android:layout_gravity="center_vertical"
            />
        <RelativeLayout
            android:id="@+id/me_fans_relative"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/me_fans_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_me_fans"
                android:textSize="16sp"
                android:textColor="@color/theme_while"/>

            <TextView
                android:id="@+id/me_fans_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="0"
                android:textColor="@color/theme_while"
                android:layout_toRightOf="@id/me_fans_text"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>