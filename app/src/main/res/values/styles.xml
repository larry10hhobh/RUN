<resources>

    <style name="BaseAppTheme"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">

    </style>
    <style name="ToolBarMenu" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="style_smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="style_text" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="style_text_white" parent="style_text">
        <item name="android:textColor">@color/base_color_text_white</item>
    </style>
    <style name="style_text_black" parent="style_text">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>
</resources>
