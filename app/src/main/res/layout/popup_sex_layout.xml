<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_sex_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7fbfbfbf">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/popup_layout_shape">
            <TextView
                android:id="@+id/popup_sex_man"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="男"
                android:textSize="16sp"
                android:textColor="@color/primaryBlue"
                android:gravity="center"
                android:background="@drawable/popup_item_selector"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_dark_gray"/>
            <TextView
                android:id="@+id/popup_sex_woman"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="女"
                android:textSize="16sp"
                android:textColor="@color/primaryBlue"
                android:gravity="center"
                android:background="@drawable/popup_item_selector"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_dark_gray"/>
            <TextView
                android:id="@+id/popup_sex_cancel"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="取消"
                android:textSize="16sp"
                android:textColor="@color/primaryBlue"
                android:gravity="center"
                android:background="@drawable/popup_item_selector"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>